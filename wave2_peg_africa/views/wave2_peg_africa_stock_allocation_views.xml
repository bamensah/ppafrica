<!--                    groups="stock.group_stock_multi_locations"-->
                </xpath>
                <xpath expr="//page/field[@name='operations']/tree/field[@name='location_dest_id']" position="replace">
                    <field name="location_dest_id" domain="[('usage', '=', 'customer')]" />
