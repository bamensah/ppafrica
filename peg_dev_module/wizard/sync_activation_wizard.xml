<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id='sync_activation_form' model="ir.ui.view">
            <field name="name">Sync Activation</field>
            <field name="model">sync.activation.wizard</field>
            <field name="arch" type="xml">
                <form string="Sync Activation">
                    <group>
                        <field name="last_sync_activated_token" readonly="1"/>
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>